script(id="titlebar", type="text/x-underscore-template")
    .titlebar
        span(class="window_title") <%=title%>
        span(id="topic") <%=topic%>

script(id="chat", type="x-underscore-template")
    #main-window
        #chat-window
            #chat-bar.bar
            #chat-contents.bar
            #input-container.bar
                .input
                    input(id="chat-input")
                    a(id="chat-button", class="btn disabled") Send
        #user-window
            #user-bar.bar
                .titlebar
                    span(class='window_title') User List
            #user-list.bar

script(id="channel", type="text/x-underscore-template")
    span(class="channel-name") <%=name%>
    <% if (notStatus) { %>
    .close-button ×
    span(class="badge badge-important unread", title="Unread Messages") <%=unread%>
    span(class="badge badge-info unread-highlights", title="Unread Highlights") <%=unreadHighlights%>
    <% } %>

script(id="user_box", type="text/x-underscore-template")
    div.user_box_element
        i(class="icon-user icon-white spacing-right")
        <%=nick%>
    div.user_box_element
        .close-button ×
        i(class="icon-asterisk icon-white spacing-right")
        <%=server%>

script(id="userlist_user", type="text/x-underscore-template")
    div(class="userlist_user_info")
        div(class="userlist_user_name") <%=role%><%=nick%>

script(id="action-message", type="text/x-underscore-template")
    .chat_action
        b * <%=user%>&nbsp;
        span <%=content%>
    .chat-time
        span <%=timeStamp%>

script(id="topic-message", type="x-underscore-template")
    i.icon-exclamation-sign
    b
        <%=nick%> 
    | has changed the topic to 
    i
        <%=topic%>
    
script(id="message", type="text/x-underscore-template")
    .chat-name
        b <%=user%>
    div(class!="chat-message <%=type%>")
        span <%=content%>
    .chat-time
        span <%=timeStamp%>

script(id="joinpart-message", type="text/x-underscore-template")
    
    span(class="{{type}}_img")
    span <b><%=nick%></b> <%=action%> the channel <%=reason%> <%=message%>

script(id="nickchange-message", type="text/x-underscore-template")
    span <b><%=oldNick%></b> is now known as <%=newNick%>

script(id="alert", type="text/x-underscore-template")
    .alert(class="<%=type%>")
        a(class="close", data-dismiss="alert", href="#") &times;
        <%=content%>
