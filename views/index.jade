  body
    script(type='text/x-handlebars', data-template-name="appView")
        {{#if App.loggedIn}}
        .navbar.navbar-fixed-top
            .navbar-inner
                a(class="brand", href="#") PrashFour
                ul.nav
                    li(class="active")
                        a(href="#") Network1
                            span.badge Bind to unread
                    li
                        a(href="#") #channel2
                    li
                        a(href="#") #channel3
                    li.divider-vertical
                    li
                        a(href="#") Network2
        .row-fluid.chatArea
            .chatWindow.span9
                .message 
                    | this is a message that would appear in the chat window
                p also a message
            .userList.span3
                div START
                div END
        .row-fluid
            input(type="text", placeholder="Message or Command").span12
        {{else}}
        .hero-unit
            h1 PrashFour - HyperText IRC Mega Chatocol Deluxe
        .row-fluid
            .offset4.span4.offset4
                legend Login
                label Enter a User Name to Start
                {{view view.userNameInput placeholder="Ex. Sally Scrotumbreath"}}
                div
                    button.btn Login Button that Doesn't Actually Work
        {{/if}}
        